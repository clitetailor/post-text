{
  "include": ["packages/*/src", "scripts/*"],
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "target": "es2018",
    "importHelpers": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "composite": true
  }
}
