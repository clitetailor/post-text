{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "target": "es2018",
    "importHelpers": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "paths": {
      "ast/*": ["ast/*"],
      "command/*": ["command/*"]
    }
  }
}
